package com.example.crop.entity;

import jakarta.persistence.*;
import lombok.AllArgsConstructor;
import lombok.Data;
import lombok.NoArgsConstructor;

import java.io.Serializable;
import java.time.LocalDateTime;

@Entity
@Data
@AllArgsConstructor
@NoArgsConstructor
public class Crop implements Serializable {

    @Id
    @GeneratedValue(strategy = GenerationType.IDENTITY)
    private Long id;

    // ← From the selected crop card
    @Column(nullable = false)
    private Long cropId;

    // ← Derived from crop
    @Column(nullable = false)
    private Long farmerId;

    // ← From JWT (dealer role)
    @Column(nullable = false)
    private Long dealerId;

    @Column(nullable = false)
    private Double offeredPrice; // per unit
    @Column(nullable = false)
    private Double quantity;     // units/kg as per your UI

    @Enumerated(EnumType.STRING)
    @Column(nullable = false)
    private CropStatus status = CropStatus.PENDING;

    @Column(nullable = false)
    private LocalDateTime createdAt;

    @PrePersist
    public void onCreate() {
        this.createdAt = LocalDateTime.now();
        if (this.status == null) this.status = CropStatus.PENDING;
    }
}
