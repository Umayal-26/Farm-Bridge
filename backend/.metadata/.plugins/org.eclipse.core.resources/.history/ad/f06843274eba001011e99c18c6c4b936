package com.example.crop.controller;

import com.example.crop.dto.CreateRequestDto;
import com.example.crop.entity.CropRequest;
import com.example.crop.service.CropRequestService;
import lombok.RequiredArgsConstructor;
import org.springframework.http.ResponseEntity;
import org.springframework.web.bind.annotation.*;

@RestController
@RequestMapping("/requests")
@RequiredArgsConstructor
public class CropRequestController {

    private final CropRequestService service;

    // Dealer sends request (farmerId derived from crop; dealerId from JWT)
    @PostMapping
    public ResponseEntity<?> sendRequest(@RequestBody CreateRequestDto request,
                                         @RequestHeader("Authorization") String authHeader) {
        return ResponseEntity.ok(service.sendRequest(request, authHeader));
    }

    // Role-aware: Farmer → incoming; Dealer → sent; Admin → all
    @GetMapping("/my")
    public ResponseEntity<?> myRequests(@RequestHeader("Authorization") String authHeader) {
        return ResponseEntity.ok(service.getRequestsForUser(authHeader));
    }

    // Farmer or Admin approves/rejects
    @PutMapping("/{id}/status/{status}")
    public ResponseEntity<?> updateStatus(@PathVariable Long id,
                                          @PathVariable String status,
                                          @RequestHeader("Authorization") String authHeader) {
        try {
            CropRequest updated = service.updateRequestStatus(id, status.toUpperCase(), authHeader);
            return ResponseEntity.ok(updated);
        } catch (Exception e) {
            return ResponseEntity.badRequest().body(e.getMessage());
        }
    }
}
